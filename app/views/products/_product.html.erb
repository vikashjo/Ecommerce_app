<%= link_to product do %>
  <div id="<%= dom_id product %>" class="relative flex flex-col items-center justify-center">
    <%= image_tag product.images.first, class: "w-full h-80 object-cover rounded-lg brightness-75 hover:brightness-50 transition-all duration-250" if product.images.any? %>
    <p class="text-lg text-gray-50 "> <%= product.title %> </p>
    <p class="text-lg text-gray-100"> <%= number_to_currency product.price %> </p>
  </div>
<% end %>